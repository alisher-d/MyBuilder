<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.builder.address.AddressFragment">

   <com.google.android.material.textview.MaterialTextView
       android:id="@+id/current_location"
       android:background="@drawable/shape"
       android:layout_width="match_parent"
       android:text="Use Current Location"
       android:gravity="center_horizontal"
       android:textSize="22sp"

       android:layout_margin="16dp"
       android:padding="8dp"
       android:layout_height="wrap_content"
       app:drawableStartCompat="@drawable/ic_baseline_my_location_24" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputCountryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        android:hint="Country"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCountryName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:padding="16dp" />
    </com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputStateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        android:hint="State"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etStateName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:padding="16dp" />
    </com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        android:hint="City or Region"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCityName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:padding="16dp" />
    </com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.button.MaterialButton
    android:id="@+id/btnSave"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Save address"
    app:cornerRadius="8dp"
    android:backgroundTint="#D50000"
    android:layout_margin="8dp"
    android:paddingHorizontal="32dp"
    android:layout_height="wrap_content"/>
</LinearLayout>